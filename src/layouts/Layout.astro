---
import { ClientRouter } from 'astro:transitions';
import WebGLViewTransitions from '../components/WebGLViewTransitions.astro';

interface Props {
  title: string;
  pageId: number;
  debug?: boolean;
}

const { title, pageId, debug } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <ClientRouter />
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
      }

      .page-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 40px;
      }

      h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      }

      p {
        font-size: 1.2rem;
        margin-bottom: 30px;
        max-width: 600px;
        text-align: center;
        line-height: 1.6;
      }

      .nav-buttons {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
      }

      .nav-buttons a {
        padding: 15px 30px;
        font-size: 1rem;
        border: 2px solid black;
        background: rgba(255, 255, 255, 0.2);
        color: black;
        text-decoration: none;
        cursor: pointer;
        border-radius: 50px;
        transition: all 0.3s ease;
      }

      .nav-buttons a:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      }

      .image-card {
        background: rgba(255, 255, 255, 0.95);
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.3);
        margin-top: 40px;
        max-width: 500px;
        width: 100%;
        transform: rotate(-3deg);
        transition: transform 0.3s ease;
      }

      .image-card:hover {
        transform: rotate(0deg) scale(1.02);
      }

      .image-card img {
        width: 100%;
        height: auto;
        border-radius: 4px;
        display: block;
      }
      img:not([class]) {
        max-width: 100%;
        display: block;
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <WebGLViewTransitions displacementImage="/displacement1.jpg" speed={0.015} intensity={0.4} debug={debug} />

    <div class={`page-container page-${pageId}`} data-page-id={pageId}>
      <slot />
    </div>
  </body>
</html>
